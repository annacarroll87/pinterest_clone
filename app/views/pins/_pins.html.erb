<div class="container-fluid">
 <div class="card-deck-wrapper">
   <div class="card-columns">
    <% @pins.each do |pin| %>
    <div class="card">
      <%= image_tag pin.image.url(:index), class: 'card-img-top' %>
      <!-- <img class="card-img-top" data-src="..." alt="Card image cap"> -->
      <div class="card-block">
        <h4><%= pin.title %></h4>
        <!-- <h4 class="card-title">Card title</h4> -->
        <p><%= pin.description %></p>
       <!--  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
        <%= link_to 'Show', pin_path(pin), class: "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-info btn-sm" %>
        <%= link_to 'Delete', pin_path(pin), method: :delete, class: "btn btn-danger btn-sm"%>
      </div>
    </div>
    <% end %>
  </div>
 </div>
</div>


        

